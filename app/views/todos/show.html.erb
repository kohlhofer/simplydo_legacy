


<div id="listInterface">
  
  <div id="toDos">
  <h1><%= @page_title = @todo_list.name %></h1>
    <div id="openToDos">
      <% if @todos.size == 0 %>
        <p class="noToDos">Yay! No open To-Dos.</p>
      <% else  %>
        <ul>
          <% @todos.each do |todo| %>
            <li><%= todo.title %></li>
          <% end %>
        </ul>
      <% end %>
    </div>
    
    <div id="closedToDos">
      <% if @todos.size == 0 %>
        <p class="noToDos">Nothing done yet :(</p>
      <% else  %>
        <ul>
          <% @todos.each do |todo| %>
            <li><%= todo.title %></li>
          <% end %>
        </ul>
      <% end %>
    </div>
  </div>

  <%= render :partial => 'todo_lists/todo_lists' %>

  <div class="clearThis"> </div>
  
</div>