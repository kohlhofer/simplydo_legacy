<div id="listInterface">

  <div id="toDos">
    <h1><%= @page_title = @todo_list.name %></h1>
    <%= render :partial => 'todos/add' %>
    <% if @open_todos.size == 0 %>
      <p class="noToDos" id="noOpenToDos">Yay - No open To-Dos on this list!</p>
    <% end  %>
    <ul id="openToDos">
      <% @open_todos.each do |todo| %>
        <%= render :partial => 'todos/todo', :locals => {:todo => todo} %>
      <% end %>
    </ul>
    
    <div id="closedToDosContainer">
        <ul id="closedToDos">
          <% @closed_todos.each do |todo| %>
            <%= render :partial => 'todos/todo', :locals => {:todo => todo} %>
          <% end %>
        </ul>
    </div>
    
    <div id="listOptions">
      <a href="#">Delete this list?</a>
    </div>
  </div>

  <%= render :partial => 'todo_lists/todo_lists' %>

  <div class="clearThis"> </div>

</div>