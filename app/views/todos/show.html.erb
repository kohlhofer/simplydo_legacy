<div id="listInterface">


  <div id="toDos">
    <div id="openToDos">
      <% if @todos.size == 0 %>
        <p class="noToDos">Yay! No open To-Dos.</p>
      <% else  %>
        <ul>
          <% @todos.each do |todo| %>
            <li><%= todo.title %></li>
          <% end %>
        </ul>
      <% end %>
    </div>
    
    <div id="closedToDos">
      <% if @todos.size == 0 %>
        <p class="noToDos">Nothing done yet :(</p>
      <% else  %>
        <ul>
          <% @todos.each do |todo| %>
            <li><%= todo.title %></li>
          <% end %>
        </ul>
      <% end %>
    </div>
    
    
  </div>
  
  <div id="toDoLists">
    <ul>
      <% @todo_lists.each do |todo_list| %>
        <li><%= todo_list.name %>
      <% end %>
      <li id="add_todo_list"><%= link_to_remote('add list', :update => 'add_todo_list', :url => {:controller => 'todo_lists', :action => 'new'}) %></li>
    </ul>
  </div>
  
  
  <div class="clearThis"> </div>
</div>