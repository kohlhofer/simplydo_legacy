<li id="<%= "todo_#{todo.id}" %>"> 
  <% if todo.done == 0 %>
    <%= check_box('done', todo.id, :class => "tickBox", :onclick => remote_function( :url => { :action => "close", :id => todo.id })) %>
  <% else %>
    <%= check_box('done', todo.id, :class => "tickBox", :checked => 'checked', :onclick => remote_function( :url => { :action => "reopen", :id => todo.id })) %>
  <% end %>
  <p class="title"><%= todo.title %>
  <% if todo.done == 1 %>
    <%= link_to_remote('Remove', :url => tododestroy_url(todo.id), :html => {:class => 'deleteToDo'}) %>
  <% end %>
  </p>
</li>