<li id="<%= "todo#{todo.id}" %>">
  <%= todo.title %>
  <% if todo.done == 0 %>
    <%= check_box('done', todo.id, :onclick => remote_function( :url => { :action => "close", :id => todo.id })) %>
  <% else %>
    <%= check_box('done', todo.id, :checked => 'checked', :onclick => remote_function( :url => { :action => "reopen", :id => todo.id })) %>
  <% end %>
</li>