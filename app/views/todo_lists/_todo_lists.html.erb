<div id="toDoLists">
  <h2>Your Lists:</h2>
  <ul>
    <% @todo_lists.each do |todo_list| %>
      <li<%= (@todo_list.id == todo_list.id) ? ' class="current"' : '' %>><%= link_to(todo_list.name, todolist_path(todo_list)) %></li>
    <% end %>
  </ul>
  <%- if @can_create_new_list -%>
  <%= render :partial => 'todo_lists/add_todo_list' %>
  <%- end -%>
</div>